ScreenMain:
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        FitImage:
            id: IconBTC
            source: "BTC.png"
            size_hint: None, None
            size: 75, 75
            pos_hint: {"center_x": .5, 'center_y': .7}
        Label:
            id: text_price
            text: str(root.price)
            pos_hint: {'center_y': .3}
            font_size: 20
            halign: 'center'
            color: int(root.red),int(root.green),int(root.blue),1
            bold: True
        MDRoundFlatButton:
            text: "Click"
            on_press: root.UpdatePrice(root)
            pos_hint: {'top': .3, 'center_x': .5}
